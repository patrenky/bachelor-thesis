<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/tmo_back"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Back" />

        <Button
            android:id="@+id/tmo_rotate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Rotate" />

        <TextView
            android:id="@+id/tmo_text0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:text="Reinhard global TMO" />

        <ImageView
            android:id="@+id/tmo_image0"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@android:color/background_light" />

        <TextView
            android:id="@+id/tmo_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:text="TextView" />

        <ImageView
            android:id="@+id/tmo_image1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@android:color/background_light" />

        <TextView
            android:id="@+id/tmo_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:text="TextView" />

        <ImageView
            android:id="@+id/tmo_image2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@android:color/background_light" />

        <TextView
            android:id="@+id/tmo_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:text="TextView" />

        <ImageView
            android:id="@+id/tmo_image3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@android:color/background_light" />

    </LinearLayout>
</ScrollView>